<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
      <record id="view_xlsx_report_asset_repair_form" model="ir.ui.view">
          <field name="name">view.xlsx.report.asset.repair.form</field>
          <field name="model">xlsx.report.asset.repair</field>
          <field name="inherit_id" ref="cmo_account_report.view_xlsx_report_account_common_form"/>
          <field name="mode">primary</field>
          <field name="arch" type="xml">
              <field name="period_start_id" position="attributes">
                  <attribute name="invisible">1</attribute>
              </field>
              <field name="period_end_id" position="attributes">
                  <attribute name="invisible">1</attribute>
              </field>
          </field>
      </record>

      <record id="action_xlsx_report_asset_repair_form" model="ir.actions.act_window">
          <field name="name">Asset Repair</field>
          <field name="res_model">xlsx.report.asset.repair</field>
          <field name="view_type">form</field>
          <field name="view_mode">form</field>
          <field name="target">new</field>
      </record>

      <menuitem id="menu_asset_repair_report"
          name="Asset Report"
          parent="menu_cmo_account_report"
          action="action_xlsx_report_asset_repair_form"
          sequence="30"/>

    </data>
</openerp>
